<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_top_title"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/top_title_bar_bg">

    <TextView
        android:id="@+id/app_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:textColor="@color/app_white"
        android:textSize="@dimen/font17" />

    <TextView
        android:id="@+id/app_title_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"
        android:background="@color/app_transparent"
        android:textColor="@color/app_white"
        android:textSize="@dimen/font13"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/app_title_back"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/top_title_bar_back" />

</RelativeLayout>